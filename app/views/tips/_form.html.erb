<%= form_for @tip do |f| %>

  <p>
    <%= f.label :title, "Title of your tip (max 80 chars)" %>
    <%= f.text_field :title %>
  </p>

  <p>
    <%= f.label :body, "Write your tip below" %>
    <%= f.text_area :body %>
  </p>
  
  <p>
    <%= f.label :preview %><br />
    <%= f.text_area :preview %>
  </p>
  

	<div id='preview_options'>
		<%= render :partial => 'preview_options' %>
	</div>


  <p class='clear_both' style='margin:1em 0;'>
		<%= f.label :tag_list, "List of tags (separate with commas)" %>
		<%= f.text_field :tag_list %>
  </p>

  <p class='submit'><%= f.submit "post tip", :disable_with => "posting tip..." %></p>
<% end %>