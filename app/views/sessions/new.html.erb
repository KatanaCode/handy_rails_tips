<%- title "Log In" -%>
<%- form_tag "/sessions/create", :id => "login_form" do -%>
  <p>
    <%= label_tag :username, "Username or email" %>
    <%= text_field_tag :username %>
  </p>
  <p>
    <%= label_tag :password, "Password" %>
    <%= password_field_tag :password %>
  </p>
	<p class='align_right'><%= link_to "forgot password?", forgot_password_path %></p>
  <p class='align_right'><%= submit_tag "log in" %></p>
<%- end -%>


