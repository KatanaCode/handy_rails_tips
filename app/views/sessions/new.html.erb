<%- title "Log In", false -%>
<%= form_tag session_path, :id => "login_form" do -%>
  <p>
    <%= label_tag :username %>
    <%= text_field_tag :username %>
  </p>
  <p>
    <%= label_tag :password %>
    <%= password_field_tag :password %>
  </p>

  <p class='align_right'><%= submit_tag "log in" %></p>
<%- end -%>
