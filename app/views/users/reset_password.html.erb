<%- title "Reset Password" -%>
<% form_for @user do |f| -%>
  <%= f.error_messages %>
	<p><%= f.label :password, "New password" %><%= f.password_field :password, :value => "" %></p>
	<p>
		<%= f.label :password_confirmation, "Re-enter new password" %>
		<%= f.password_field :password_confirmation %>
	</p>
	<%= f.hidden_field :updating_password, :value => true %>
	<p class='submit'><%= f.submit "save changes", :disable_with => 'saving changes...' %></p>
<% end -%>